extends ../layout/mainLayout.pug 
block albumPage 
  .myAlbum__container.w-100.bg-white.py-3 
    .myAlbum__header 
      a.btn.btn-success.myAlbum__new-btn(href="/my-albums/new-album") Add new album 
    .myAlbum__body 
      .row.container.myAlbum__list
        each album in albums
          .col-lg-3.col-md-6.col-sm-12
            .myAlbum__item
              .myAlbum__item-img-list
                each photo in album.photos
                  img.myAlbum__item-img-item(src= photo.image, alt="")
              .myAlbum__item-content
                p.myAlbum__item-title= album.title
                a.myAlbum__item-editIcon.d-block(href="my-albums/edit-album/" + album._id) 
                  i(class="fa-solid fa-pen-to-square text-white")
              if album.mode === "private"
                .myAlbum__private.bg-white 
                  i(class="fa-solid fa-lock")